{
  "name": "Avisos.pt",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://avisos.pt",
  "scripts": {
    "build:css": "postcss src/assets/css/postcss.css -o src/assets/css/style.css --no-map",
    "build:js": "react-scripts build",
    "build": "npm-run-all build:css build:js",
    "deploy": "npm run build && gh-pages -d build",
    "start:js": "react-scripts start",
    "start": "npm-run-all -p watch:css start:js",
    "watch:css": "watch 'npm run build:css' src/assets/css/theme"
  },
  "eslintConfig": {
    "extends": [
      "wesbos"
    ],
    "rules": {
      "react/jsx-props-no-spreading": "off",
      "react/prop-types": 0
    }
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.2.5",
    "classnames": "^2.3.1",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.1",
    "postcss-nested": "^5.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "scrollreveal": "^4.0.9",
    "tailwind-react-ui": "^0.8.1",
    "tailwindcss": "^2.1.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-wesbos": "lukemcdonald/eslint-config-wesbos",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react-scripts": "4.0.3",
    "watch": "^1.0.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
